{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=allservices_registry;Username=registry_user;Password=registry_password;Include Error Detail=true"
  },
  "Storage": {
    "Endpoint": "s3.allservices.cc",
    "AccessKey": "CHANGE_ME",
    "SecretKey": "CHANGE_ME",
    "UseSsl": true,
    "CdnBaseUrl": "https://cdn.allservices.cc"
  },
  "Authentication": {
    "Authority": "https://auth.allservices.cc",
    "Audience": "registry_api"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://allservices.cc",
      "https://www.allservices.cc",
      "https://admin.allservices.cc",
      "https://developer.allservices.cc"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "AllowedHosts": "*"
}
